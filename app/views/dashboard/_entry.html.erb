<% content_for :header do %>
  <h1>
    <% if entry.created_at.today? %>
      Today
    <% else %>
      <%= l in_user_time_zone(entry.created_at), format: :day_of_week %>
    <% end %>
  </h1>
  <p class="lead">
    <%= l in_user_time_zone(entry.created_at), format: :month_day_year %>
  </p>
<% end %>

<%= paginate @entries %>

<%= simple_format(entry.body) %>
