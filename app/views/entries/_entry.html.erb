<% content_for :header do %>
  <%= render partial: "date",
    object: entry.date,
    locals: { today: entry.for_today? }
  %>
<% end %>

<%= paginate @entries %>

<p>
  <%= link_to "Edit", edit_entry_path(entry) %>
</p>

<%= simple_format(entry.body) %>

<% if entry.photo.url %>
  <%= image_tag entry.photo.url, width: 400 %>
<% end %>
