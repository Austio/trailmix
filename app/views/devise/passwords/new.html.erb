<% content_for :header do %>
  <h1>Forgot your password?</h1>
  <p class="lead">We'll email you reset instructions.</p>
<% end %>

<%= simple_form_for(
  resource,
  as: resource_name,
  url: password_path(resource_name),
  html: { method: :post }
) do |f| %>

  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email,
      label: false,
      required: true,
      autofocus: true,
      placeholder: "Email address" %>
  </div>

  <%= f.button :submit, "Email me" %>
  or <%= link_to "cancel", new_session_path(:user) %>.
<% end %>
