<h2>Edit Your Email or Password</h2>

<%= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :patch }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :current_password, hint: "Enter your current password to make changes", required: true, error_html: { class: 'text-danger' } %>
    <%= f.input :password, hint: "Leave this blank if you don't want to change it", required: false, error_html: { class: 'text-danger' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
