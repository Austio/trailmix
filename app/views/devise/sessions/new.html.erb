<h2>Welcome to Trailmix.</h2>

<%= simple_form_for(
  resource,
  as: resource_name,
  url: session_path(resource_name)
) do |f| %>

  <div class="form-group">
    <%= f.input :email,
      label: false,
      required: false,
      autofocus: true,
      placeholder: "Email address" %>
  </div>

  <div class="form-group">
    <%= f.input :password,
      label: false,
      required: false,
      placeholder: "Password" %>
  </div>

  <%= f.button :submit, "Sign in" %>
  or <%= link_to "Sign up", new_registration_path(resource_name) %>.
  <%= link_to "Forget your password?", new_password_path(resource_name) %>
<% end %>
